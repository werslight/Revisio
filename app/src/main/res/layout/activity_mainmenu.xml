<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/reviziobg"
    tools:context=".Mainmenu">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_goneMarginTop="10dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_goneMarginTop="10dp"
        android:src="@drawable/setting"
        android:contentDescription="@string/logo" />

    <TextView
        android:id="@+id/titleMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/applabel"
        android:textColor="@color/back"
        app:layout_goneMarginTop="150dp"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/mainMenuButtons"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/appLogo" />

    <LinearLayout
        android:id="@+id/mainMenuButtons"
        android:layout_height="wrap_content"
        android:layout_width="180dp"
        app:layout_constraintTop_toBottomOf="@id/titleMainMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startStudyB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/startstudy"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/check"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editStudyB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editstudy"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/check"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calendarStudyB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calendar"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/check"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
